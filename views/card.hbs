<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center container">
	<h1 class="display-4">Корзина:</h1>
<div id="card">
		{{#if products.length}}
		<table class="table">
			<thead>
				<tr>
					<th scope="col">Название</th>
					<th scope="col">Колличество</th>
					<th scope="col">Действия</th>
				</tr>
			</thead>
			<tbody>
				{{#each products}}
				<tr>
					<th scope="row">{{ title }}</th>
					<td>{{ count }}</td>
					<td>
						<button class="btn btn-danger js-remove" data-id="{{ id }}">Удалить</button>
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
		<p>Цена: <span class="price">{{ price }}</span></p>
		{{else}}
		<p class="lead"><span class="text-danger">Корзина пуста.</span></p>
		{{/if}}
</div>
</div>